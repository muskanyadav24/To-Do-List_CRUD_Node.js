<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Stunning Todo App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background: linear-gradient(135deg, #4e54c8, #8f94fb);
            min-height: 100vh;
            padding-top: 40px;
            font-family: 'Poppins', sans-serif;
            display: flex;
            align-items: center;
        }
        .glass-card {
            width: 520px;
            margin: auto;
            padding: 30px;
            border-radius: 20px;
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(12px);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.25);
        }
        .todo-item {
            background: rgba(255, 255, 255, 0.22);
            border-radius: 10px;
            padding: 12px 18px;
            margin-bottom: 12px;
            color: #fff;
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: 0.3s;
        }
        .todo-item:hover {
            transform: translateX(6px);
            background: rgba(255, 255, 255, 0.35);
        }
        .btn-edit {
            background: #00b0ff;
            border-radius: 8px;
            padding: 5px 12px;
            color: white;
        }
        .btn-delete {
            background: #ff1744;
            border-radius: 8px;
            padding: 5px 12px;
            color: white;
        }
    </style>
</head>
<body>

<div class="glass-card">
    <h2 class="text-center mb-4 text-white fw-bold">ðŸ”¥ Stunning Todo List</h2>

    <!-- Add Todo Form -->
    <form action="/addTodo" method="POST" class="d-flex gap-2 mb-4">
        <input type="text" name="title" class="form-control" placeholder="Enter a new todo" required>
        <button class="btn btn-success rounded-3">Add</button>
    </form>

    <!-- Todo List -->
    <% todos.forEach(function(todo, index) { %>
        <div class="todo-item">
            <span class="fs-5"><%= todo.title %></span>
            <div class="d-flex gap-2">
                <button 
                    class="btn-edit border-0"
                    data-bs-toggle="modal"
                    data-bs-target="#editModal"
                    onclick="setEditData('<%= index %>', '<%= todo.title %>')">
                    Edit
                </button>
                <a href="/delete/<%= index %>" 
                   class="btn-delete text-decoration-none"
                   onclick="return confirm('Delete this todo?')">
                   Delete
                </a>
            </div>
        </div>
    <% }); %>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Edit Todo</h5>
                <button class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <form id="editForm" method="POST">
                <div class="modal-body">
                    <input type="text" id="editInput" name="title" class="form-control" required>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-warning w-100">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="/js/script.js"></script>

</body>
</html>